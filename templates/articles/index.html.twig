{% extends 'base.html.twig' %}

{% block meta_description %} Découvrez nos articles en {{ categorySelected.name }} et développez vos connaissances sans bla-bla ! {% endblock %}

{% block title %} {{ categorySelected.name }} : nos derniers articles {{parent()}}  {% endblock %}

{% block body %}

    <div class="row">
    
        <div class="row p-0 align-items-center" id="header-article">

            <div class="d-flex col-3 align-items-center justify-content-center home-part body-grey">
                <a href="{{ path('app_home') }}">
                    <i style="font-size:30px" class="fa-solid fa-house"></i>
                </a>
            </div>

            <div class="d-flex col-9 article-part">
                <div class="d-flex col-6 align-items-center justify-content-around align-items-center nav bg-blue-logo text-white fw-bold previous">
                    <i style="font-size:3rem" class="fa-solid fa-arrow-left"></i> 
                </div>
                <div class="d-flex col-6 align-items-center justify-content-around align-items-center nav bg-blue-logo text-white fw-bold next"> 
                    <i style="font-size:3rem" class="fa-solid fa-arrow-right"></i>
                </div>
            </div>
        </div>

        <div class="p-2 d-flex col-12 fil-ariane align-items-center">
            <div class="col-8 mx-auto">
                <ul class="d-flex align-items-center">
                    <li class="text-grey px-2 fw-bold"> Accueil </li> <span class="text-grey"> / </span>
                    <li class="text-grey px-2 fw-bold"> Articles </li> <span class="text-grey"> / </span>
                    <li class="text-grey px-2 fw-bold"> Web </li>
                </ul>
            </div>
        </div>

        <div class="pt-5 col-8 mx-auto">

            <h1 class="text-center mb-5 text-less-grey"> {{ categorySelected.name }} </h1>

            <h2 class="text-center text-grey fst-italic"> {{ categorySelected.description }}</h2>

            {% for article in listArticles %}
                <article class="col-md-10 d-flex mt-5">

                    <div class="col-md-3 picture">
                        <img alt="{{ article.title }}" title="{{ article.title }}" src="{{ asset('' ~ article.picture)}}" width="100%" >
                    </div>

                    <div class="col-md-9 chapo">
                        <p class="text-grey"> <span class="fw-bold"> {{ article.category.name }} </span> - {{ article.date |date("m/d/Y") }}</p>
                        <a href="{{ path('article', {id: article.id}) }}"> <h4> {{ article.title }} </h4></a>
                        <p class="text-grey"> {{ article.chapo }} </p>
                        <span class="share-separator"></span>
                        <span class="share-article text-grey fst-italic very-small-font"> Partager l'article : </span>
                        <ul>
                            <i style="color:#1DA1F2;" class="fa-brands fa-twitter"></i>
                            <i style="color:#1DA1F2;" class="px-2 fa-brands fa-linkedin"></i>
                            <i style="color:#3b5998;" class="fa-brands fa-facebook"></i>
                        </ul>
                    </div>
                </article>

                <div class="separator mt-5" style="height:2px; background:rgba(255,255,255, 0.05)">

                </div>

            {% endfor %}
        </div>

        {% include 'footer.html.twig' %}

    </div>

{% endblock %}
